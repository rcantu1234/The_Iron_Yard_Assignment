<p id="notice"><%= notice %></p>

<h1>Listing Ironyards</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ironyards.each do |ironyard| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.age %></td>
        <td><%= user.location %></td>
        <td><%= link_to 'Show', ironyard %></td>
        <td><%= link_to 'Edit', edit_ironyard_path(ironyard) %></td>
        <td><%= link_to 'Destroy', ironyard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

